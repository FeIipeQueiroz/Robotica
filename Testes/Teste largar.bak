task main()
{
  bool sla = true;
  SetSensorTouch(IN_1);
  SetSensorLight(IN_2);
  SetSensorUltrasonic(IN_4);

  while(SENSOR_1 != 1){}
  Wait(100);

  while(sla){
   //TextOut(0, LCD_LINE3, "ultrassonico: " + NumToStr(SensorUS(IN_4)), true);
   OnRevSync(OUT_AC, 30, 0);
   if( > SensorUS(IN_4) && Sensor(IN_1) != 1)
   {
      Off(OUT_AC);
      Wait(100);
      OnRevSync(OUT_AC, 50, 100);
      Wait(1850);
      Off(OUT_AC);
      OnRev(OUT_B, 30);
      Wait(300);
      Off(OUT_B);
      OnFwdSync(OUT_AC, 50, 0);
      Wait(1000);
      OnFwd(OUT_B, 30);
      Wait(300);
      Off(OUT_ABC);
      sla = false;
   }
   else if(10 > SensorUS(IN_4) && Sensor(IN_1) == 1)
   {
     OnFwdSync(OUT_AC, 50, 0);
     sla = false;
   }
}
}


